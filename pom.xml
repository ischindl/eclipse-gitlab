<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.zkovari.eclipse</groupId>
	<artifactId>org.zkovari.eclipse.gitlab.parent</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>pom</packaging>

	<properties>
		<project.version>0.0.1-SNAPSHOT</project.version>
		<tycho.version>1.4.0</tycho.version>
		<jacoco-version>0.8.4</jacoco-version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
		<eclipse-repo.url>http://download.eclipse.org/releases/2019-06</eclipse-repo.url>
	</properties>

	<repositories>
		<repository>
			<id>eclipse-release</id>
			<url>${eclipse-repo.url}</url>
			<layout>p2</layout>
		</repository>

		<repository>
			<id>eclipse-swtbot</id>
			<url>https://download.eclipse.org/technology/swtbot/releases/2.7.0/</url>
			<layout>p2</layout>
		</repository>
	</repositories>

	<profiles>
		<profile>
			<id>Dev</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>

			<modules>
				<module>org.zkovari.eclipse.gitlab.core</module>
				<module>org.zkovari.eclipse.gitlab.core.test</module>
				<module>org.zkovari.eclipse.gitlab.ui</module>
				<module>org.zkovari.eclipse.gitlab.ui.test</module>
			</modules>
		</profile>

		<profile>
			<id>UnitTest</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>

			<modules>
				<module>org.zkovari.eclipse.gitlab.core</module>
				<module>org.zkovari.eclipse.gitlab.core.test</module>
				<module>org.zkovari.eclipse.gitlab.ui</module>
			</modules>
		</profile>

		<profile>
			<id>UITest</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>

			<modules>
				<module>org.zkovari.eclipse.gitlab.core</module>
				<module>org.zkovari.eclipse.gitlab.ui</module>
				<module>org.zkovari.eclipse.gitlab.ui.test</module>
			</modules>
		</profile>

		<profile>
			<id>Coverage</id>
			
			<modules>
				<module>org.zkovari.eclipse.gitlab.core</module>
				<module>org.zkovari.eclipse.gitlab.core.test</module>
				<module>org.zkovari.eclipse.gitlab.ui</module>
				<module>org.zkovari.eclipse.gitlab.ui.test</module>
				<module>org.zkovari.eclipse.gitlab.coverage.report</module>
			</modules>
			
			<build>
				<plugins>
					<plugin>
						<groupId>org.jacoco</groupId>
						<artifactId>jacoco-maven-plugin</artifactId>
						<version>${jacoco-version}</version>
						<executions>
							<execution>
								<goals>
									<goal>prepare-agent</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>

	</profiles>

	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho.version}</version>
				<extensions>true</extensions>
			</plugin>
			<!--Enable the replacement of the SNAPSHOT version in the final product 
				configuration -->
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-packaging-plugin</artifactId>
				<version>${tycho.version}</version>
				<executions>
					<execution>
						<phase>package</phase>
						<id>package-feature</id>
						<configuration>
							<finalName>${project.artifactId}_${unqualifiedVersion}.${buildQualifier}</finalName>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>${tycho.version}</version>
				<configuration>
					<environments>
						<environment>
							<os>linux</os>
							<ws>gtk</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>win32</os>
							<ws>win32</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>macosx</os>
							<ws>cocoa</ws>
							<arch>x86_64</arch>
						</environment>
					</environments>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
